# .htaccess corregido para APIDOCENTES
<IfModule mod_rewrite.c>

      RewriteEngine On
    RewriteBase /

    # Permitir acceso directo a archivos en /api_cliente/
    RewriteCond %{REQUEST_URI} ^/api_cliente/ [NC]
    RewriteRule ^ - [L]

    # Permitir acceso directo a archivos CSS, JS, imágenes
    RewriteCond %{REQUEST_URI} \.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf)$ [NC]
    RewriteRule . - [L]

    # Permitir acceso directo a archivos PHP específicos
    RewriteCond %{REQUEST_URI} ^/APIDocentes/(views|public|controllers)/ [NC]
    RewriteRule . - [L]

    # Redirigir SOLO rutas que no existen físicamente y no son archivos PHP
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} !\.(php)$ [NC]
    RewriteRule ^(.*)$ index.php [L]

    # Permitir acceso directo a api_handler.php
    RewriteRule ^api_handler\.php$ - [L]

</IfModule>